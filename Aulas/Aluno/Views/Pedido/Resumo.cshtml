@model CarrinhoViewModel
<h3>Resumo do Pedido</h3>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-6"><h4>Nº do Pedido: @Model.PedidoId</h4></div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6"><h4>Seus Dados</h4>
            <div class="row">
                <div class="col-md-6">João da Silva<br />(11)1234-5678</div>
                <div class="col-md-6">joao@alura.com.br</div>
            </div>
            </div>
            <div class="col-md-6">
                <h4>Endereço de Entrega</h4>
                <div>Rua Vergueiro, 123, Vila Mariana - São Paulo - SP</div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-6"><h4>Item</h4></div>
            <div class="col-md-6 text-right"><h4>Quantidade</h4></div>
        </div>
        @foreach (var item in Model.ItensCarrinho)
        {
        <div class="row">
            <div class="col-md-6">@item.Produto.Descricao</div>
            <div class="col-md-6 text-right">@item.Quantidade</div>
        </div>
        }
    </div>
</div>

<div class="row">
    <span class="pull-right">
        <a asp-action="carrossel"
           class="btn btn-success">
            Novo Pedido
        </a>
    </span>
</div>