@model Aula3.Models.PedidoViewModels.CarrinhoViewModel
<br />
<br />
<br />
<h3>Meu Carrinho</h3>
<div>
    <div class="panel panel-default">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-6">item(s)</div>
                <div class="col-md-2 text-center">preço unitário</div>
                <div class="col-md-2 text-center">quantidade</div>
                <div class="col-md-2 text-right">subtotal</div>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                @foreach(var item in Model.ItensCarrinho)
                {
                    <div class="col-md-6">@item.Produto.Descricao</div>
                    <div class="col-md-2 text-center">R$ @item.PrecoUnitario</div>
                    <div class="col-md-2 text-center">@item.Quantidade</div>
                    <div class="col-md-2 text-right">R$ @(item.Quantidade * item.PrecoUnitario)</div>
                }
            </div>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col-md-8"></div>
                <div class="col-md-2">Total (@Model.ItensCarrinho.Count() itens)</div>
                <div class="col-md-2 text-right">R$ @Model.Total</div>
            </div>
        </div>
    </div>
    <div class="row">
        <a asp-action="Resumo" 
           asp-controller="Pedido" 
           class="btn btn-success pull-right">
            Finalizar Pedido
        </a>
    </div>
</div>